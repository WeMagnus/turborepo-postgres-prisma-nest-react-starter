{
  "globalEnv": ["DATABASE_URL"],
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "db:generate": {
      "cache": true,
      "outputs": ["node_modules/.prisma/**"],
      "dependsOn": ["^build"]
    },
    "db:migrate": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    }
  }
}
